/* pages/mapnav/mapnav.wxss */
.container {
  height: 100%;
  overflow: hidden;
}

.map-container {
  height: 50vh;
  width: 100%;
}

.map {
  width: 100%;
  height: 100%;
}

.list-container {
  width: 100%;
  background-color: #efefef;
}

.poi-list {
  width: 100%;
  height: 42vh;
}

.list-item {
  margin: 10px;
  background-color: #fff;
  border-radius: 4px;
  padding: 8px;
  border: 1px solid #fff;
}

.list-item.active {
  border-color: #2A79EA;
}

.item-info {
  color: #666;
  font-size: 12px;
}

.btn-ctrl {
  padding: 8px 0;
}
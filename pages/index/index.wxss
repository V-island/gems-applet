/**index.wxss**/
.page-search {
  position: absolute;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
  background: white;
  box-shadow: 0 0 .6rem rgba(0, 0, 0, .3);

  box-sizing: border-box;
  padding: 0 .5rem;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.page-search .user-info{
  flex: 0 0 2.5rem;
  border-right: 1px solid #eee;
}
.page-search .user-info .user-avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #999;
  overflow: hidden;

}
.page-search .search-input{
  flex: 1 0 0;
  padding: 0 .8rem;
  line-height: 2.5rem
}
.page-search .search-input text{
  color: #999;
}
.page-search .search-memu{
  flex: 0 0 1.5rem;
}
.page-search .search-memu .fa{
  font-size: 1rem;
  color: #999;
}
.page-map{
  width: 100%;
  height: 100%;
}

.btn-entry{
  position: absolute;
  bottom: 1rem;
  left: calc(50% - 240rpx / 2);

  background: #0591ee;
  border: 1px solid #0591ee;
  border-radius: 80rpx;
  color: white;
  width: 240rpx;
  height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  
}
.btn-entry .fa{
  margin-right: .5rem;
}
.btn-entry-hover{
  background: #0276c4;
}


.bottom-tips{
  position: absolute;
  z-index: 10;
  bottom: 0;
  left: 0;
  right: 0;
  box-shadow: 0 0 40rpx rgba(0, 0, 0, .3);
}


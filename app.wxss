/* components */

/* wxss */
@import './wxss/font-awesome.wxss';
@import './wxss/form.wxss';

page{
  width: 100%;
  height: 100%;
  font-size: 14px;
}
/**app.wxss**/
.container {
  position: relative;
  height: 100%;
  width: 100%;
} 

.empty{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #9E9E9E;
}


/*卡片项目*/
.card{
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, .2);
  margin: 16rpx;
  padding: 16rpx;
}
.card + .card{
  margin-top: 24rpx;
}

.card-row{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.card-row + .card-row{
  margin-top: 16rpx;
}

.card-row + .card-bottom{
  margin-top: 24rpx;
}

.card-meida{
  width: 140rpx;
  height: 140rpx;
  flex-basis: 140rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
  
  flex-shrink: 0;
}

.card-info{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
}

.card-info .title{
  font-size: 34rpx;
}

.card-info .desc,
.card-info .timer{
  color: #9E9E9E;
}
.card-row .btn-goto{
  margin-left: 16rpx;
  flex-basis: 100rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.card-record{
  display: flex;
  justify-content: space-between;
  padding: 18rpx 0;
  border-top: 1rpx solid #eee;
  font-size: 30rpx;
}
.card-record .card-count{
  font-size: 42rpx;
  color: rgb(0, 102, 255);
}
.card-record .card-more{
  color: rgb(0, 102, 255);
  margin: 0;
  background: transparent;
  line-height: 1;
  font-size: 30rpx;
}
.card-record .card-more::after{
  border: 0 solid rgba(0, 0, 0, 0.2);
}
.card-record .card-more .fa{
  margin: 0 10rpx;
}

.tag{
  border:1px solid #FF9800;
  color: #FF9800;
  border-radius: 10rpx;
  padding:2rpx 8rpx;
  white-space: nowrap;
}

.tag + .tag{
  margin-left: 16rpx;
}

.btn-goto{
  flex-shrink: 0;
  background: #2196F3;
  color: white;
  font-size: 24rpx;
}

.btn-goto .fa{
  display: block;
  margin-top: 16rpx;
}

.btn-goto-hover{
  background: #64B5F6;
}